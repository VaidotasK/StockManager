<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="TextViewBasic">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/textSize_S</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewBasicWithBackground" parent="TextViewBasic">
        <item name="android:background">@color/background_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="TextViewTitles" parent="TextViewBasic">
        <item name="android:textSize">@dimen/textSize_XL</item>
        <item name="android:layout_width">@dimen/padOrMar_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>


    </style>

    <style name="EditTextViewBasic">
        <item name="android:textSize">@dimen/textSize_L</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/background_text</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:paddingBottom">@dimen/padOrMar_S</item>
        <item name="android:paddingLeft">@dimen/padOrMar_M</item>
    </style>

    <style name="mySpinnerItemStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@color/background_text</item>
        <item name="android:textSize">@dimen/textSize_L</item>
        <item name="android:paddingLeft">@dimen/padOrMar_M</item>
        <item name="android:layout_weight">2</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_width">@dimen/padOrMar_0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonQuantityChange">
        <item name="android:layout_width">@dimen/otherSize_S</item>
        <item name="android:layout_height">@dimen/otherSize_S</item>
        <item name="android:background">@color/background_button</item>
    </style>

    <style name="LinearLayoutBasic" parent="TextViewTitles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padOrMar_XL</item>
        <item name="android:orientation">horizontal</item>

    </style>

</resources>
